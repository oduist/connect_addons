<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="call_source_list" model="ir.ui.view">
        <field name="name">call_source_list</field>
        <field name="model">utm.source</field>
        <field name="inherit_id" ref="utm.utm_source_view_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="phone"/>
            </field>
        </field>
    </record>

    <record id="call_source_form" model="ir.ui.view">
        <field name="name">call_source_form</field>
        <field name="model">utm.source</field>
        <field name="inherit_id" ref="utm.utm_source_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="phone"/>
            </field>
        </field>
    </record>

</odoo>
