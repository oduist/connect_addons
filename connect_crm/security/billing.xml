<odoo>
    <record id="connect_server_crm_create_access" model="ir.model.access">
        <field name="name">connect_server_crm_create_access</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="group_id" ref="connect.group_connect_billing"/>
    </record>
    
    <record id="connect_server_mail_alias_domain" model="ir.model.access">
        <field name="name">connect_server_mail_alias_domain</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>                
        <field name="model_id" ref="mail.model_mail_alias_domain"/>
        <field name="group_id" ref="connect.group_connect_billing"/>
    </record>

    <record id="connect_server_crm_stage_access" model="ir.model.access">
        <field name="name">connect_server_crm_stage_access</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>                
        <field name="model_id" ref="crm.model_crm_stage"/>
        <field name="group_id" ref="connect.group_connect_billing"/>
    </record>

    <record id="connect_agent_crm_team_access" model="ir.model.access">
        <field name="name">connect_agent_crm_team_access</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="model_id" ref="crm.model_crm_team"/>
        <field name="group_id" ref="connect.group_connect_billing"/>
    </record>

    <!-- RECORD RULES -->
    <record id="server_crm_records_rule" model="ir.rule">
        <field name="name">server_crm_records_rule</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="groups" eval="[(4, ref('connect.group_connect_billing'))]"/>
        <field name="domain_force">[(1,'=', 1)]</field>
    </record>
</odoo>
