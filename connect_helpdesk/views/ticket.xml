<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='connect_ticket_action' model='ir.actions.act_window'>
        <field name='name'>Calls</field>
        <field name='res_model'>connect.call</field>
        <field name='view_mode'>tree,form</field>
        <field name="domain">[('ticket', '=', active_id)]</field>
    </record>

    <!-- Ticket form view -->
    <record id="view_ticket_form" model="ir.ui.view">
        <field name="name">connect.helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(connect_ticket_action)d" type="action"
                    class="oe_stat_button" icon="fa-phone">
                        <field name="connect_calls_count" string="Calls" widget="statinfo"/>
                </button>
            </xpath>

        </field>
    </record>

    <!-- Ticket list view -->
    <record id="view_ticket_list" model="ir.ui.view">
        <field name="name">connect.helpdesk.ticket.list</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="connect_calls_count" string="Calls" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="search_tickets_calls" model="ir.ui.view">
        <field name="name">connect.helpdesk.ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_phone"/>
            </field>
        </field>
    </record>

</odoo>