<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ticket_call_list" model="ir.ui.view">
        <field name="name">view_ticket_call_list</field>
        <field name="model">connect.call</field>
        <field name="inherit_id" ref="connect.connect_call_list"/>
        <field name="arch" type="xml">
            <field name="partner" position="after">
                <field name="ticket" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_ticket_call_form" model="ir.ui.view">
        <field name="name">view_ticket_call_form</field>
        <field name="model">connect.call</field>
        <field name="inherit_id" ref="connect.connect_call_form"/>
        <field name="arch" type="xml">
            <button name="create_partner_button" position="after">
                <button string="Ticket" name="create_ticket_button" type="object" class="btn btn-info" icon='fa-ticket'/>
            </button>
            <page name="call" position="after">
                <page name="ticket" string="Ticket">
                    <group>
                        <group>
                            <field name="ticket"/>
                        </group>
                        <group>
                            <button name="unlink_ticket" type="object" string="Unlink"
                                attrs="{'invisible': [('ticket', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="view_ticket_call_search" model="ir.ui.view">
        <field name="name">view_ticket_call_search</field>
        <field name="model">connect.call</field>
        <field name="inherit_id" ref="connect.connect_call_search"/>
        <field name="arch" type="xml">
            <field name="partner" position="after">
                <field name="ticket"/>
            </field>
            <filter name="by_partner" position="after">
                <filter name="by_ticket" string="Ticket" context="{'group_by': 'ticket'}"/>
            </filter>
        </field>
    </record>

</odoo>
